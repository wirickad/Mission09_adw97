<!--Alex Wirick mission 9
    index.html page-->
@model BooksViewModel

<h3 class="text-center">Welcome to Narnes and Boble, the world's newest online book store!</h3>
<br />
<!--This will create a display object for each book (up to 10 per page)-->
@foreach (Books b in Model.Books)
{
<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>
            @b.Title
            <span class="badge badge-pill badge-primary" style="float:right">
                <small>@b.Price.ToString("c")</small>
            </span>
        </h4>
    </div>
    <div class="card-text p-1">
        Author: @b.Author
    </div>
    <div class="card-text p-1">
        Publisher: @b.Publisher
    </div>
    <div class="card-text p-1">
        ISBN: @b.Isbn
    </div>
    <div class="card-text p-1">
        Classification: @b.Classification
    </div>
    <div class="card-text p-1">
        Category: @b.Category
    </div>
    <div class="card-text p-1">
        @b.PageCount Pages
    </div>

</div>
    <br />
}
<!--These are the pagination buttons that will show up at the bottom of the index page-->
<div page-model="@Model.PageInfo" page-action="Index" page-classes-enabled="true"
     page-class="btn" page-class-normal="btn-outline-dark"
     page-class-selected="btn-primary" class="btn-group pull-right m-1">
</div>

